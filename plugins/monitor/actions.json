{
  "Logs": {
    "üîé Consulta": {
      "Listar logs": {
        "cmd": "gcloud logging logs list --project={project}",
        "params": ["project"],
        "param_hints": {}
      },
      "Describir log": {
        "cmd": "gcloud logging logs describe {log_id} --project={project}",
        "params": ["log_id", "project"],
        "param_hints": {}
      },
      "Leer logs filtrados": {
        "cmd": "gcloud logging read \"{filter}\" --limit={limit} --project={project}",
        "params": ["filter", "limit", "project"],
        "param_hints": {}
      },
      "Tail logs en tiempo real": {
        "cmd": "gcloud logging tail \"{filter}\" --project={project}",
        "params": ["filter", "project"],
        "param_hints": {}
      },
      "Leer logs de severidad ERROR": {
        "cmd": "gcloud logging read \"severity>=ERROR\" --format=json --project={project}",
        "params": ["project"],
        "param_hints": {}
      }
    },
    "üì§ Creaci√≥n": {
      "Escribir entrada en log": {
        "cmd": "gcloud logging write {log_id} \"{message}\" --project={project}",
        "params": ["log_id", "message", "project"],
        "param_hints": {}
      }
    },
    "‚ùå Eliminaci√≥n": {
      "Borrar log": {
        "cmd": "gcloud logging logs delete {log_id} --project={project}",
        "params": ["log_id", "project"],
        "param_hints": {}
      }
    },
    "‚öôÔ∏è Configuraci√≥n": {
      "Listar log buckets": {
        "cmd": "gcloud logging buckets list --project={project}",
        "params": ["project"],
        "param_hints": {}
      },
      "Actualizar retenci√≥n bucket logs": {
        "cmd": "gcloud logging buckets update {bucket_id} --retention-days={days} --project={project}",
        "params": ["bucket_id", "days", "project"],
        "param_hints": {}
      },
      "Listar log views": {
        "cmd": "gcloud logging views list --bucket={bucket_id} --project={project}",
        "params": ["bucket_id", "project"],
        "param_hints": {}
      },
      "Crear log view": {
        "cmd": "gcloud logging views create {view_id} --bucket={bucket_id} --log-filter={filter} --project={project}",
        "params": ["view_id", "bucket_id", "filter", "project"],
        "param_hints": {}
      }
    }
  },

