  "Alert Policies": {
    "üì§ Creaci√≥n": {
      "Crear alerta": {
        "cmd": "gcloud monitoring policies create --policy-from-file={policy_file}",
        "params": ["policy_file"],
        "param_hints": {
          "policy_file": {"type": "file", "extensions": [".json", ".yaml"]}
        }
      }
    },
    "üîé Consulta": {
      "Listar alertas": {
        "cmd": "gcloud monitoring policies list --project={project}",
