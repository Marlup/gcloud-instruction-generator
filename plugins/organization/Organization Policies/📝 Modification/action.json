{
  "Set org policy (project)": {
    "cmd": "gcloud org-policies set-policy {policy_file} --project={project_id}",
    "params": [
      "policy_file",
      "project_id"
    ],
    "param_hints": {
      "policy_file": {
        "type": "file",
        "extensions": [
          ".json",
          ".yaml"
        ]
      }
    }
  },
  "Set org policy (folder)": {
    "cmd": "gcloud org-policies set-policy {policy_file} --folder={folder_id}",
    "params": [
      "policy_file",
      "folder_id"
    ],
    "param_hints": {
      "policy_file": {
        "type": "file",
        "extensions": [
          ".json",
          ".yaml"
        ]
      }
    }
  },
  "Set org policy (organization)": {
    "cmd": "gcloud org-policies set-policy {policy_file} --organization={org_id}",
    "params": [
      "policy_file",
      "org_id"
    ],
    "param_hints": {
      "policy_file": {
        "type": "file",
        "extensions": [
          ".json",
          ".yaml"
        ]
      }
    }
  },
  "Clear org policy": {
    "cmd": "gcloud org-policies clear {constraint} --project={project_id}",
    "params": [
      "constraint",
      "project_id"
    ],
    "param_hints": {}
  }
}